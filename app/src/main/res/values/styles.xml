<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationButtonStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/color_item_bnv</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:fontFamily">@font/graphik</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="YearCustomButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/year_button_color</item>
        <item name="android:fontFamily">@font/graphik</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/year_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:fontFamily">@font/graphik</item>
    </style>

    <style name="CustomRangeSliderStyle" parent="Widget.Material3.Slider">
        <item name="thumbColor">#FFFFFF</item>
        <item name="thumbHeight">24dp</item>
        <item name="thumbStrokeColor">#000000</item>
        <item name="thumbStrokeWidth">1dp</item>
        <item name="thumbTrackGapSize">0dp</item>
        <item name="thumbWidth">24dp</item>
        <item name="trackColorActive">@color/blue</item>
        <item name="trackColorInactive">@color/gray_text_light</item>
        <item name="trackHeight">4dp</item>
        <item name="trackStopIndicatorSize">0dp</item>
        <item name="labelBehavior">gone</item>
    </style>

    <style name="ImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/chip_background_color</item>
        <item name="android:fontFamily">@font/graphik</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/graphik</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialComponents.Chip
        </item>
    </style>

    <style name="BorderlessImageButtonStyle">
        <item name="android:background">@null</item>
    </style>

</resources>